set nocompatible
set number
set guioptions-=r
set guioptions-=L
set guioptions-=b
set fileformat=unix 
set showmatch  
set fenc=utf-8
set backspace=2
set matchtime=5
set incsearch
set hlsearch
set noexpandtab
set whichwrap+=<,>,h,l
set autoread
set splitbelow

set tabstop=4   
set softtabstop=4 
set shiftwidth=4  
set textwidth=79 
set expandtab
set autoindent  
set fileformat=unix

filetype plugin on

let mapleader = ";"
let g:airline_powerline_fonts = 1

call plug#begin('~/.vim/plugged')
Plug 'morhetz/gruvbox'
Plug 'vim-airline/vim-airline'
Plug 'vim-airline/vim-airline-themes'
call plug#end()

if has("gui_running")
    let g:airline#extensions#tabline#enabled = 1
    let g:airline_theme="sol"
    colorscheme gruvbox
    set background=dark

    set cursorline
    set cursorcolumn

    set guifont=YaHei_Consolas_Hybrid:h12
else
    let g:airline_disable_statusline = 1
endif
